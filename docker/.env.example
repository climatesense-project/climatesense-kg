# Copy this file to .env and update the values

# GitHub token for accessing private repositories
GITHUB_TOKEN=your_github_token_here

# Virtuoso configuration
VIRTUOSO_HOST=virtuoso
VIRTUOSO_PORT=8890
VIRTUOSO_USER=dba
VIRTUOSO_PASSWORD=change_this_password
VIRTUOSO_ISQL_SERVICE_URL=http://isql-service:8080

# ISQL service configuration
ISQL_SERVICE_PORT=8080

# CIMPLE Factors API configuration
CIMPLE_FACTORS_API_URL=http://localhost:8000

# PostgreSQL cache configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=climatesense_cache
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password

# Analytics API service configuration
# The analytics API falls back to the POSTGRES_* values when this DSN is omitted
# ANALYTICS_DATABASE_DSN=postgresql+asyncpg://postgres:postgres@postgres:5432/climatesense_cache
ANALYTICS_SPARQL_ENDPOINT=http://virtuoso:8890/sparql
# ANALYTICS_SPARQL_USER=
# ANALYTICS_SPARQL_PASSWORD=
ANALYTICS_ALLOWED_ORIGINS=http://localhost:3000
ANALYTICS_CACHE_TTL=60
ANALYTICS_SPARQL_TIMEOUT=20
ANALYTICS_API_PORT=8000

# Analytics UI configuration
NEXT_PUBLIC_ANALYTICS_API_URL=http://localhost:8000
ANALYTICS_UI_PORT=3000

# Virtuoso performance tuning parameters
# (https://docs.openlinksw.com/virtuoso/rdfperformancetuning/#rdfperfgeneral)
VIRT_PARAMETERS_NUMBEROFBUFFERS=340000
VIRT_PARAMETERS_MAXDIRTYBUFFERS=250000
VIRT_PARAMETERS_CHECKPOINTINTERVAL=60
VIRT_PARAMETERS_FREETEXTBATCHSIZE=100000
VIRT_PARAMETERS_SERVERTHREADS=20
VIRT_DATABASE_MAXCHECKPOINTREMAP=16000
VIRT_TEMPDATABASE_MAXCHECKPOINTREMAP=16000
VIRT_HTTPSERVER_SERVERTHREADS=10
VIRT_HTTPSERVER_HTTPTHREADSIZE=280000
