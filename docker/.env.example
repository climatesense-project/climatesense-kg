# Copy this file to .env and update the values

# GitHub token for accessing private repositories
GITHUB_TOKEN=your_github_token_here

# Virtuoso configuration
VIRTUOSO_HOST=virtuoso
VIRTUOSO_PORT=8890
VIRTUOSO_USER=dba
VIRTUOSO_PASSWORD=change_this_password
VIRTUOSO_ISQL_SERVICE_URL=http://isql-service:8080

# ISQL service configuration
ISQL_SERVICE_PORT=8080

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_ENV=dev

# Redis Commander (web UI for Redis)
REDIS_COMMANDER_PORT=8081

# Virtuoso performance tuning parameters
# (https://docs.openlinksw.com/virtuoso/rdfperformancetuning/#rdfperfgeneral)
VIRT_PARAMETERS_NUMBEROFBUFFERS=340000
VIRT_PARAMETERS_MAXDIRTYBUFFERS=250000
VIRT_PARAMETERS_CHECKPOINTINTERVAL=60
VIRT_PARAMETERS_FREETEXTBATCHSIZE=100000
VIRT_PARAMETERS_SERVERTHREADS=20
VIRT_DATABASE_MAXCHECKPOINTREMAP=16000
VIRT_TEMPDATABASE_MAXCHECKPOINTREMAP=16000
VIRT_HTTPSERVER_SERVERTHREADS=10
VIRT_HTTPSERVER_HTTPTHREADSIZE=280000
